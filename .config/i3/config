#the same shortcuts bau with mod key
    bindsym $mod+o exec --no-startup-id flatpak run md.obsidian.Obsidian, mode "default"
    bindsym $mod+c exec --no-startup-id code, mode "default"
    bindsym $mod+b exec --no-startup-id brave-browser, mode "default"
    bindsym $mod+n exec --no-startup-id nemo, mode "default"
    bindsym $mod+s exec --no-startup-id spotify, mode "default"
    bindsym $mod+p exec --no-startup-id flatpak run com.bitwarden.desktop, mode "default"
    bindsym $mod+d exec --no-startup-id discord, mode "default"
    bindsym $mod+g exec --no-startup-id github-desktop, mode "default"
    bindsym $mod+t exec --no-startup-id thunderbird, mode "default"

