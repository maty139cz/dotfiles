# launch polybar with script
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

set $Locker i3lock -i ~/Obrázky/HAtm65g.png -L -k --time-color=ffffff --date-color=ffffff

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+shift+q  mode "$mode_system"

#mode for launching appls and programs
set $mode_launch Launch (o) Obsidian (c) VScode (b) Brave browser (n) Nemo (s) Spotify (p) Bitwarden (d) Discord (g) github desktop (t) Thunderbird (m) Caprine massenger

mode "$mode_launch" {
    bindsym o exec --no-startup-id flatpak run md.obsidian.Obsidian, mode "default"
    bindsym c exec --no-startup-id code, mode "default"
