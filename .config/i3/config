# enable tap to click for this touchpad
exec xinput set-prop "ELAN0718:01 04F3:30FD Touchpad" "libinput Tapping Enabled" 1

# enable natural scrolling
exec xinput set-prop "ELAN0718:01 04F3:30FD Touchpad" "libinput Natural Scrolling Enabled" 1
# invert scrolling direction
exec_always xinput set-prop "ELAN0718:01 04F3:30FD Touchpad" "libinput Scroll Method Enabled" -1 1 1

# autoenable numlock
